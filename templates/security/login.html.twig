{% extends 'base.html.twig' %}

{% block body %}
	<div class="main-page">
		<div class="small-blank-divider"></div>

		<form method="post">

			<h1>Log in</h1>

			{% if error %}
				{% if error.messageKey|trans(error.messageData, 'security') is same as('Invalid credentials.') %}
					<div class="alert">Wrong email or wrong password.</div>
				{% else %}
					<div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
			{% endif %}

			<div class="login-form">
				<div class="form-group">
					<label for="inputEmail" class="form-group-label">
						<strong>Email</strong>
					</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>

				<div class="form-group">
					<label for="inputPassword" class="form-group-label">
						<strong>Password</strong>
					</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="form-group">
					<div class="checkbox">
						<label>
							<input type="checkbox" name="_remember_me">
							<strong>Remember me</strong>
						</label>
					</div>
				</div>

				<button class="btn btn-dark" type="submit">
					Log in
				</button>
			</form>

			<span class="log-info">
			Candidat account: random@yahoo.fr / 1234<br/>
			Recruter account: another@hotmail.fr / abcd</span>
		</div>
	{% endblock %}
