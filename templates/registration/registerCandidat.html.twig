{% extends 'base.html.twig' %}

{% block body %}
	<div class="main-page">
		<div class="tiny-blank-divider"></div>

		<h1>Register as candidat</h1>

		{{ form_start(registrationForm) }}

		<div class="register-form">

			<div class="aligned-input">
				<div class="form-group">
					<label for="registration_form[email]" class="form-group-label">
						<strong>{{ form_label(registrationForm.email) }}</strong>
					</label>
					{{ form_widget(registrationForm.email) }}
					<div class="input-error">{{ form_errors(registrationForm.email) }}</div>
				</div>

				<div class="form-group">
					<label for="registration_form[password][first]" class="form-group-label">
						<strong>{{ form_label(registrationForm.password.first) }}</strong>
					</label>
					{{ form_widget(registrationForm.password.first) }}
					{% if form_errors(registrationForm.password.first) is same as('') %}
						<small id="passwordHelp" class="form-text text-muted">{{ form_help(registrationForm.password.first) }}</small>
					{% endif %}
					<div class="input-error">{{ form_errors(registrationForm.password.first) }}</div>
				</div>

				<div class="form-group">
					<label for="registration_form[password][second]" class="form-group-label">
						<strong>{{ form_label(registrationForm.password.second) }}</strong>
					</label>
					{{ form_widget(registrationForm.password.second) }}
				</div>
			</div>

			<span class="register-info">The following informations are not required,<br/>
				but helps recruters having crucials informations when applying to jobs.</span>

			<div class="aligned-input">
				<div class="form-group">
					<label for="registration_form[name]" class="form-group-label">
						<strong>{{ form_label(registrationForm.name) }}</strong>
					</label>
					{{ form_widget(registrationForm.name) }}
				</div>

				<div class="form-group">
					<label for="registration_form[surname]" class="form-group-label">
						<strong>{{ form_label(registrationForm.surname) }}</strong>
					</label>
					{{ form_widget(registrationForm.surname) }}
				</div>

				<div class="form-group">
					<label for="registration_form[birthday]" class="form-group-label">
						<strong>{{ form_label(registrationForm.birthday) }}</strong>
					</label>
					{{ form_widget(registrationForm.birthday) }}
				</div>

				<div class="form-group">
					<label for="registration_form[phone]" class="form-group-label">
						<strong>{{ form_label(registrationForm.phone) }}</strong>
					</label>
					{{ form_widget(registrationForm.phone) }}
				</div>

				<div class="form-group">
					<label for="registration_form[country]" class="form-group-label">
						<strong>{{ form_label(registrationForm.country) }}</strong>
					</label>
					{{ form_widget(registrationForm.country) }}
				</div>

				<div class="form-group">
					<label for="registration_form[city]" class="form-group-label">
						<strong>{{ form_label(registrationForm.city) }}</strong>
					</label>
					{{ form_widget(registrationForm.city) }}
				</div>

				<div class="form-group">
					<label for="registration_form[departement]" class="form-group-label">
						<strong>{{ form_label(registrationForm.departement) }}</strong>
					</label>
					{{ form_widget(registrationForm.departement) }}
				</div>
				<button type="submit" class="btn btn-dark submit-form-button">Register</button>
			</div>

		</div>
		{{ form_end(registrationForm) }}

		<div class="small-blank-divider"></div>
	</div>
{% endblock %}
