{% extends 'base.html.twig' %}

{% block body %}
	<div class="main-page">
		<div class="small-blank-divider"></div>
		
		<h1>Register</h1>

		{{ form_start(registrationForm) }}

		<div class="register-form">
			<div class="form-group">
				<label for="registration_form[email]" class="form-group-label">
					<strong>{{ form_label(registrationForm.email) }}</strong>
				</label>
				{{ form_widget(registrationForm.email) }}
				<div class="input-error">{{ form_errors(registrationForm.email) }}</div>
			</div>

			<div class="form-group">
				<label for="registration_form[plainPassword]" class="form-group-label">
					<strong>{{ form_label(registrationForm.plainPassword) }}</strong>
				</label>
				{{ form_widget(registrationForm.plainPassword) }}
				{% if form_errors(registrationForm.plainPassword) is same as('') %}
					<small id="passwordHelp" class="form-text text-muted">{{ form_help(registrationForm.plainPassword) }}</small>
				{% endif %}
				<div class="input-error">{{ form_errors(registrationForm.plainPassword) }}</div>
			</div>

			<button type="submit" class="btn btn-dark">Register</button>
		</div>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
