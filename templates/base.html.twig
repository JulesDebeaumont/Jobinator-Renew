<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Jobinator
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="/css/style.css" rel="stylesheet">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body>
		<div id="main">
			<nav class="navbar navbar-expand-lg navbar-dark">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{ path('home') }}">
						Jobinator
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}

								{% if is_granted('ROLE_CANDIDAT') %}
									<li class="nav-item">
										<a class="nav-link active" href="{{ path('my_applications') }}">My applications</a>
									</li>
								{% endif %}

								{% if is_granted('ROLE_RECRUTER') %}
									<li class="nav-item">
										<a class="nav-link active" href="{{ path('my-jobs') }}">My jobs</a>
									</li>
								{% endif %}

								<li class="nav-item">
									<a class="nav-link active" href="{{ path('profil') }}">My profile</a>
								</li>

								<li class="nav-item">
									<a class="nav-link active" href="{{ path('app_logout') }}">Log out</a>
								</li>

							{% else %}
								<li class="nav-item">
									<a class="nav-link active" href="{{ path('app_login') }}">Log in</a>
								</li>
								<li class="nav-item">
									<a class="nav-link active" href="{{ path('app_register') }}">Register</a>
								</li>
							{% endif %}

							<li class="nav-item">
								<a class="nav-link active" href="{{ path('about') }}">About</a>
							</li>

						</ul>
					</div>
				</div>
			</nav>
			{% block body %}{% endblock %}
		</div>
	</body>
</html>
